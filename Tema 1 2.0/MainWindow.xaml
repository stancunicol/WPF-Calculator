        IsEnabled="{Binding IsMemoryStackNotEmpty}"
            Click="MC_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
