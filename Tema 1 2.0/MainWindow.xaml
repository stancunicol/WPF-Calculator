        <Button
        x:Name="MC"
        Content="MC"
        Height="35"
        Width="55"
        Background="{DynamicResource ButtonBackgroundColor}"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        Margin="10, 10, 0, 340"
